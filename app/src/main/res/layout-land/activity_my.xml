<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffe9a2"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="@string/settings"
                    android:id="@+id/btnSettings"
                    android:layout_weight="1"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/rub_back"
                    android:id="@+id/rubLayout1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginLeft="1dp">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/history"
                            android:id="@+id/btnRUBHistory"
                            android:layout_gravity="right"
                            android:textSize="13sp"
                            android:background="@drawable/btn_history" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/rub_back_sw"
                            android:gravity="center"
                            android:padding="2dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="RUB"
                                android:id="@+id/textView2"
                                android:textColor="#ff000000"
                                android:layout_marginLeft="5dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imageRUB"
                            android:src="@drawable/rub"
                            android:layout_weight="6" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="5dp">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/rub_back_sw"
                                android:padding="2dp"
                                android:id="@+id/linLayoout2">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="USD"
                                    android:id="@+id/textView14"
                                    android:textSize="12sp"
                                    android:textColor="#ff000000"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginLeft="1dp" />

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:id="@+id/imageView10"
                                    android:src="@drawable/small_dollar"
                                    android:layout_gravity="center" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:id="@+id/tvRubForUsd"
                                    android:layout_gravity="center"
                                    android:textColor="#ff000000"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="10dp"
                                    android:text="--.----" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/imageRubUsdArrow"
                                    android:src="@drawable/arrow_down"
                                    android:layout_gravity="center" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/rub_back_sw"
                                android:padding="2dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="EUR"
                                    android:id="@+id/textView162"
                                    android:textSize="12sp"
                                    android:textColor="#ff000000"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginLeft="1dp" />

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:id="@+id/imageView11"
                                    android:src="@drawable/eur"
                                    android:layout_gravity="center" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="--.----"
                                    android:id="@+id/tvRubForEur"
                                    android:layout_gravity="center"
                                    android:textColor="#ff000000"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="10dp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/imageRubEurArrow"
                                    android:src="@drawable/arrow_down"
                                    android:layout_gravity="center" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:layout_marginTop="10dp">

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/update"
                                    android:id="@+id/btnUpdateRub"
                                    android:background="@drawable/btn_update_uah"
                                    android:typeface="normal"
                                    android:layout_weight="1"
                                    android:layout_marginRight="7dp"
                                    android:padding="2dp" />

                                <FrameLayout
                                    android:layout_width="40dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/rub_back_sw"
                                    android:id="@+id/rubLoadContainer">

                                    <ProgressBar
                                        style="?android:attr/progressBarStyleSmall"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/pbRub"
                                        android:visibility="gone" />

                                    <ImageView
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:id="@+id/rubIndicator"
                                        android:src="@drawable/load_corrupted"
                                        android:layout_gravity="center"
                                        android:visibility="visible" />

                                </FrameLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/oil_back"
                    android:id="@+id/oilLayout1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/history"
                            android:id="@+id/btnOilHistory"
                            android:layout_gravity="right"
                            android:textSize="13sp"
                            android:background="@drawable/btn_history" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/oil_back_sw"
                            android:gravity="center"
                            android:padding="2dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="@string/oil"
                                android:id="@+id/textView164"
                                android:textColor="#ff000000"
                                android:layout_marginLeft="5dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imageOil"
                            android:src="@drawable/oil"
                            android:layout_weight="6" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="5dp" >

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/oil_back_sw"
                                android:padding="2dp"
                                android:gravity="center|left">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="Brent"
                                    android:id="@+id/textView5"
                                    android:textSize="12sp"
                                    android:textColor="#ff000000"
                                    android:layout_gravity="top"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_weight="3" />

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:layout_weight="1">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:text="--.--"
                                        android:id="@+id/tvBrentOilPrice"
                                        android:textColor="#ff000000"
                                        android:textStyle="bold"
                                        android:layout_gravity="center" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/imageBrentOilArrow"
                                        android:src="@drawable/arrow_down"
                                        android:layout_gravity="center" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/oil_back_sw"
                                android:padding="2dp"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="WTI"
                                    android:id="@+id/textView6"
                                    android:textSize="12sp"
                                    android:textColor="#ff000000"
                                    android:layout_gravity="top"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginLeft="1dp"
                                    android:layout_weight="3" />

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:layout_weight="1">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:text="--.--"
                                        android:id="@+id/tvWtiOilPrice"
                                        android:layout_gravity="center"
                                        android:textColor="#ff000000"
                                        android:textStyle="bold" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/imageWtiOilArrow"
                                        android:src="@drawable/arrow_down"
                                        android:layout_gravity="center" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:layout_marginTop="10dp" >

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/update"
                                    android:id="@+id/btnUpdateOil"
                                    android:background="@drawable/btn_update_uah"
                                    android:typeface="normal"
                                    android:layout_weight="1"
                                    android:layout_marginRight="7dp" />

                                <FrameLayout
                                    android:layout_width="40dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/oil_back_sw"
                                    android:id="@+id/oilLoadContainer">

                                    <ProgressBar
                                        style="?android:attr/progressBarStyleSmall"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/pbOil"
                                        android:layout_gravity="center"
                                        android:visibility="gone" />

                                    <ImageView
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:id="@+id/oilIndicator"
                                        android:src="@drawable/load_corrupted"
                                        android:layout_gravity="center" />

                                </FrameLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/uah_back"
                android:visibility="visible"
                android:id="@+id/uahLayout1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/history"
                        android:id="@+id/btnUahHistory"
                        android:layout_gravity="right"
                        android:textSize="13sp"
                        android:background="@drawable/btn_history" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/uah_back_sw"
                        android:gravity="center"
                        android:padding="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="UAH"
                            android:id="@+id/textView265"
                            android:textColor="#ff000000"
                            android:layout_marginLeft="5dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageUAH"
                        android:src="@drawable/uah_ic"
                        android:layout_weight="6" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp" >

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@drawable/uah_back_sw"
                            android:padding="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="USD"
                                android:id="@+id/textView32"
                                android:textSize="12sp"
                                android:textColor="#ff000000" />

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:id="@+id/imageView16"
                                android:src="@drawable/small_dollar"
                                android:layout_gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="--.----"
                                android:id="@+id/tvUahForUsd"
                                android:layout_gravity="center"
                                android:textColor="#ff000000"
                                android:textStyle="bold"
                                android:layout_marginLeft="10dp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageUahUsdArrow"
                                android:src="@drawable/arrow_down"
                                android:layout_gravity="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@drawable/uah_back_sw"
                            android:padding="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="EUR"
                                android:id="@+id/textView34"
                                android:textSize="12sp"
                                android:textColor="#ff000000" />

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:id="@+id/imageView17"
                                android:src="@drawable/eur"
                                android:layout_gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="--.----"
                                android:id="@+id/tvUahForEur"
                                android:layout_gravity="center"
                                android:textColor="#ff000000"
                                android:textStyle="bold"
                                android:layout_marginLeft="10dp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageUahEurArrow"
                                android:src="@drawable/arrow_down"
                                android:layout_gravity="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp" >

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/update"
                                android:id="@+id/btnUpdateUah"
                                android:background="@drawable/btn_update_uah"
                                android:typeface="normal"
                                android:layout_weight="1"
                                android:layout_marginRight="7dp" />

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/uah_back_sw"
                                android:id="@+id/uahLoadContainer">

                                <ProgressBar
                                    style="?android:attr/progressBarStyleSmall"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/pbUah"
                                    android:layout_gravity="center"
                                    android:visibility="gone" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:id="@+id/uahIndicator"
                                    android:src="@drawable/load_corrupted"
                                    android:layout_gravity="center" />

                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:id="@+id/googleAdsContainer">

    </FrameLayout>

</LinearLayout>